<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.userphotograph.fragments.SignInSignUpFragment">


    <Button
        android:id="@+id/choose_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="@string/sign_in" />

    <Button
        android:id="@+id/choose_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/choose_sign_in"
        android:layout_alignRight="@+id/choose_sign_in"
        android:layout_below="@+id/choose_sign_in"
        android:text="@string/sign_up" />

</RelativeLayout>
